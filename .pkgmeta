package-as: HealIQ

# CurseForge automatic packaging configuration
# This file defines how the addon should be packaged for distribution

# Files to include in the package
enable-nolib-creation: no

# Move files to the root of the addon package
move-folders:
    HealIQ:
        - Core.lua
        - Engine.lua
        - UI.lua
        - Tracker.lua
        - Config.lua
        - Logging.lua
        - Performance.lua
        - Validation.lua
        - HealIQ.toc
        - README.md
        - LICENSE
        - CHANGELOG.md
        - INSTALL.md
        - rules/

# Files to ignore (not include in the package)
ignore:
    - .git
    - .github
    - .gitignore
    - DESIGN.md
    - CHANGELOG.md.backup
    - CHANGELOG.md.bak
    - "*.backup"
    - "*.bak"
    - "*.tmp"
    - "luacov.*"
    - "coverage*"
    - .pkgmeta
    - Tests.lua
    - test_runner.lua
    - test_packaging.lua
    - test_loading_order.lua
    - validate_runner.lua
    - WoWAPIMock.lua
    - setup-dev.sh
    - quick_packaging_check.sh

# Manual changelog - use the CHANGELOG.md file
manual-changelog: CHANGELOG.md

# License detection
license-output: LICENSE